<Window x:Class="JSON_Serialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_Serialization"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboPlatform" HorizontalAlignment="Left" Margin="40,47,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboPlatform_SelectionChanged"/>
        <Label Content="Select a Platform" HorizontalAlignment="Left" Margin="26,10,0,0" VerticalAlignment="Top" FontSize="16" FontFamily="Kristen ITC"/>
        <ListBox x:Name="lstName" Margin="200,10,0,126" MouseDoubleClick="lstName_MouseDoubleClick"/>
        <Label x:Name="lblCount" Content="" HorizontalAlignment="Left" Margin="383,327,0,0" VerticalAlignment="Top" Height="37" Width="268"/>
        <Button x:Name="btnExport" Content="Export" HorizontalAlignment="Left" Margin="40,273,0,0" VerticalAlignment="Top" Click="btnExport_Click" Height="35" Width="71"/>

    </Grid>
</Window>
