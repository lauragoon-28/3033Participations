<Window x:Class="JSON_ChuckNorris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_ChuckNorris"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Chuck_Norris_Facts_You_Didn_t_Know_1024x1024.png"/>
        </Grid.Background>
        <Label Content="Select a category of jokes: " HorizontalAlignment="Left" Margin="27,135,0,0" VerticalAlignment="Top" FontFamily="Haettenschweiler" FontSize="30" Foreground="White"/>
        <ComboBox x:Name="cboCategory" HorizontalAlignment="Left" Margin="295,135,0,0" VerticalAlignment="Top" Width="263" Height="42"/>
        <TextBox x:Name="txtJoke" HorizontalAlignment="Center" Margin="0,217,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="376" Height="167" Background="#FFAE0202" IsEnabled="False" Foreground="White" FontSize="18"/>
        <Button x:Name="btnJoke" Content="Get Joke" HorizontalAlignment="Left" Margin="585,128,0,0" VerticalAlignment="Top" Foreground="White" Background="#FF0738F6" Height="56" Width="93" Click="btnJoke_Click"/>

    </Grid>
</Window>
